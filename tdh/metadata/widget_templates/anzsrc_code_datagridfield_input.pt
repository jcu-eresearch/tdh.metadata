<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">

      <div id="for_codes-controls"
        tal:attributes="id string:${view/id_prefix}-controls;">
        <div class="control" 
          tal:repeat="index python:range(view.code_levels)">
          <select id="form.widget.codes-1" disabled="disabled"
            style="width: 25em;"
            tal:attributes="id string:${view/id_prefix}-${index};">
             <option value="" selected="selected">&nbsp;</option>
          </select>
        </div>
        <input type="button" value="Add" id="forcode-add" disabled="disabled"
        tal:attributes="id string:${view/id_prefix}-add;" />

        <script tal:content="string: bootstrapCodeFields('${view/id_prefix}-', '${view/code_type}', ${view/code_levels}, 'code');">
        </script>
      </div>
<table class="datagridwidget-table-view">
<thead>
  <tr>
    <tal:block repeat="column view/columns">
      <th class="header"
         tal:condition="python:column['mode'] != 'hidden'">
            <span i18n:translate=""
                tal:content="column/label">title</span>
            <span class="required"
                  tal:condition="column/required">*</span>
      </th>
    </tal:block>
    <th id="" class="header" tal:condition="view/allow_insert"> </th>
    <th id="" class="header" tal:condition="view/allow_delete"> </th>
    <th id="" class="header" tal:condition="view/allow_reorder"> </th>
    <th id="" class="header" tal:condition="view/allow_reorder"> </th>
  </tr>
</thead>
<tbody class="datagridwidget-body" tal:attributes="data-name_prefix view/name_prefix; data-id_prefix view/id_prefix">
  <tal:block repeat="widget view/widgets">
    <tr class="row"
        tal:attributes="class python:'%s%s datagridwidget-row' % (widget.klass, widget.mode=='hidden' and ' hidden' or '')"
        tal:condition="python:view._includeRow(widget.name)">
      <metal:block define-macro="widget-row">
          <div tal:replace="structure widget/render"></div>
      </metal:block>
    </tr>
  </tal:block>
</tbody>
</table>
<input type="hidden" tal:replace="structure view/counterMarker" />
</html>

